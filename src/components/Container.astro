---
import { cn } from "@/lib/utils";

interface Props {
  as?: string;
  class?: string;
}

const { as: Component = "div", class: className }: Props = Astro.props;
---

<Component class:list={cn("mx-auto max-w-7xl px-6 lg:px-8", className)}>
  <div class="mx-auto max-w-2xl lg:max-w-none">
    <slot />
  </div>
</Component>
