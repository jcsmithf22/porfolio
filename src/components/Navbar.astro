---
import Container from "@/components/Container.astro";
import Icon from "@/components/Icon.astro";
import { ThemeSwitcher } from "@/components/ThemeSwitcher";
import { cn } from "@/lib/utils";

const navItems = [
  // {
  //   name: "Home",
  //   href: "/",
  // },
  {
    name: "Work",
    href: "/work",
  },
  {
    name: "About",
    href: "/about",
  },
  {
    name: "Contact",
    href: "/contact",
  },
];
---

<nav
  class="pt-12 sm:pt-24 absolute top-0 inset-x-0 mx-auto max-w-7xl px-6 lg:px-8"
>
  <div class="mx-auto max-w-2xl lg:max-w-none">
    <div class="w-full flex justify-between items-baseline">
      <div class="font-[Pacifico] text-2xl flex gap-x-2 items-center">
        <!-- <Icon width="32" height="32" class="hidden" /> -->
        <div>
          <span class="text-3xl font-light">J</span>osiah
        </div>
      </div>
      <div class="flex font-light gap-x-12 items-center">
        <>
          {
            navItems.map((item) => (
              <a
                data-cursor-snap
                data-radius="20"
                href={item.href}
                class:list={cn(
                  "font-light text-zinc-600 dark:text-zinc-300 hover:text-zinc-900 dark:hover:text-white transition-colors duration-200 px-2 py-1",
                  {
                    "text-zinc-900 dark:text-white":
                      Astro.url.pathname === item.href,
                  }
                )}
              >
                {item.name}
              </a>
            ))
          }

          <div class="relative w-10 h-10">
            <ThemeSwitcher client:load />
          </div>
        </>
      </div>
    </div>
  </div>
</nav>
