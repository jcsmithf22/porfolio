---
import Container from "@/components/Container.astro";
import Icon from "@/components/Icon.astro";
import { ThemeSwitcher } from "@/components/ThemeSwitcher";
import { cn } from "@/lib/utils";

const navItems = [
  // {
  //   name: "Home",
  //   href: "/",
  // },
  {
    name: "Work",
    href: "/work",
  },
  {
    name: "About",
    href: "/about",
  },
  {
    name: "Contact",
    href: "/contact",
  },
];
---

<Container as="nav" class="pt-12 sm:pt-24 absolute top-0 inset-x-0">
  <div class="w-full flex justify-between items-baseline">
    <!-- <div class="font-[Pacifico] text-2xl flex gap-x-2 items-center"> -->
    <!-- <Icon width="32" height="32" class="hidden" /> -->
    <div>
      <span class="text-3xl font-light">J</span>osiah
    </div>
    <!-- </div> -->
    <div class="flex font-light gap-x-12 items-center">
      <>
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class:list={cn(
                "font-light text-zinc-600 dark:text-zinc-300 hover:text-zinc-900 dark:hover:text-white transition-colors duration-200",
                {
                  "text-zinc-900 dark:text-white":
                    Astro.url.pathname === item.href,
                }
              )}
            >
              {item.name}
            </a>
          ))
        }

        <div class="relative w-10 h-10">
          <ThemeSwitcher client:only />
        </div>
      </>
    </div>
  </div>
</Container>
